        <ItemsControl x:Name="ItemsControl">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal"></StackPanel>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.Items>
                <Thumb Width="40"
                       DragStarted="Myitem_OnDragStarted"
                       DragDelta="Myitem_OnDragDelta"
                       DragCompleted="Myitem_OnDragCompleted"
                       Height="40"
                       Background="#67000000"></Thumb>
                <Thumb Width="40"
                       DragStarted="Myitem_OnDragStarted"
                       DragDelta="Myitem_OnDragDelta"
                       DragCompleted="Myitem_OnDragCompleted"
                       Height="40"
                       Background="#69008900"></Thumb>
                <Thumb Width="40"
                       DragStarted="Myitem_OnDragStarted"
                       DragDelta="Myitem_OnDragDelta"
                       DragCompleted="Myitem_OnDragCompleted"
                       Height="40"
                       Background="#67900000"></Thumb>
                <Thumb Width="40"
                       DragStarted="Myitem_OnDragStarted"
                       DragDelta="Myitem_OnDragDelta"
                       DragCompleted="Myitem_OnDragCompleted"
                       Height="40"
                       Background="#67000090"></Thumb>
            </ItemsControl.Items>
        </ItemsControl>

        <ItemsControl Grid.Row="1"
                      Loaded="FrameworkElement_OnLoaded">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal"></StackPanel>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <Thumb Width="40"
                   DragStarted="Myitem_OnDragStarted"
                   DragDelta="Myitem_OnDragDelta"
                   DragCompleted="Myitem_OnDragCompleted"
                   Height="40"
                   Background="#67000090"></Thumb>
