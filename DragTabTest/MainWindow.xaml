<Window x:Class="DragTabTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DragTabTest"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="350"
        Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Canvas HorizontalAlignment="Stretch"
                x:Name="Mycanvas">
            <Thumb x:Name="myitem"
                   DragStarted="Myitem_OnDragStarted"
                   Canvas.Left="50"
                   Canvas.Top="50"
                   DragDelta="Myitem_OnDragDelta"
                   DragCompleted="Myitem_OnDragCompleted"
                   Width="40"
                   Height="40"
                   Background="#67000000"></Thumb>
            <Thumb x:Name="myitem2"
                   DragStarted="Myitem_OnDragStarted"
                   Canvas.Left="150"
                   Canvas.Top="50"
                   DragDelta="Myitem_OnDragDelta"
                   DragCompleted="Myitem_OnDragCompleted"
                   Width="40"
                   Height="40"
                   Background="#0080De"></Thumb>
        </Canvas>

